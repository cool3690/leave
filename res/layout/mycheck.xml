<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leave.check" >

    <Button
        android:id="@+id/okbtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="簽核" />
<!--  
    <TableLayout
        android:id="@+id/user_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/okbtn"
        android:layout_below="@+id/okbtn"
        android:shrinkColumns="1" >
    </TableLayout>
-->

    <Button
        android:id="@+id/fin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_list"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:text="返回" />

    <ListView
        android:id="@+id/prefer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/show"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/okbtn" >

    </ListView>

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fin"
        android:layout_alignLeft="@+id/lstPrefer"
        android:layout_marginLeft="22dp"
        android:text="show" />

</RelativeLayout>
